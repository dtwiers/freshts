{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2019"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "noPropertyAccessFromIndexSignature": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@freshts/arbitrate": ["libs/utility/arbitrate/src/index.ts"],
      "@freshts/array": ["libs/utility/array/src/index.ts"],
      "@freshts/branded": ["libs/utility/branded/src/index.ts"],
      "@freshts/compose": ["libs/utility/compose/src/index.ts"],
      "@freshts/cupid-combinator": ["libs/language/cupid-combinator/src/index.ts"],
      "@freshts/lens": ["libs/utility/lens/src/index.ts"],
      "@freshts/lisp-core": ["libs/language/honest-lisp-core/src/index.ts"],
      "@freshts/lisp-data": ["libs/language/honest-lisp-data/src/index.ts"],
      "@freshts/lisp-parser": ["libs/language/honest-lisp-parser/src/index.ts"],
      "@freshts/lisp-resolver": ["libs/language/honest-lisp-resolver/src/index.ts"],
      "@freshts/lisp-stdlib": ["libs/language/honest-lisp-stdlib/src/index.ts"],
      "@freshts/nonempty-array": ["libs/utility/nonempty-array/src/index.ts"],
      "@freshts/optics-adapter": ["libs/optics/adapter/src/index.ts"],
      "@freshts/optics-lens": ["libs/optics/lens/src/index.ts"],
      "@freshts/optics-prism": ["libs/optics/prism/src/index.ts"],
      "@freshts/optics-traversal": ["libs/optics/traversal/src/index.ts"],
      "@freshts/option": ["libs/utility/option/src/index.ts"],
      "@freshts/record": ["libs/utility/record/src/index.ts"],
      "@freshts/result": ["libs/utility/result/src/index.ts"],
      "@freshts/state": ["libs/state/store/src/index.ts"],
      "@freshts/state-builders-async": ["libs/state/builders/async/src/index.ts"],
      "@freshts/state-builders-common": ["libs/state/builders/common/src/index.ts"],
      "@freshts/state-builders-entity": ["libs/state/builders/entity/src/index.ts"],
      "@freshts/state-builders-record": ["libs/state/builders/record/src/index.ts"],
      "@freshts/state-integrations-react": ["libs/state/integrations/eezo-state-react/src/index.ts"],
      "@freshts/types": ["libs/utility/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
