{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@freshts/arbitrate": ["libs/utility/arbitrate/src/index.ts"],
      "@freshts/cupid-combinator": [
        "libs/language/cupid-combinator/src/index.ts"
      ],
      "@freshts/state-store": ["libs/state/store/src/index.ts"],
      "@freshts/utility-array": ["libs/utility/array/src/index.ts"],
      "@freshts/utility-branded": ["libs/utility/branded/src/index.ts"],
      "@freshts/utility-compose": ["libs/utility/compose/src/index.ts"],
      "@freshts/utility-nonempty-array": [
        "libs/utility/nonempty-array/src/index.ts"
      ],
      "@freshts/utility-option": ["libs/utility/option/src/index.ts"],
      "@freshts/utility-record": ["libs/utility/record/src/index.ts"],
      "@freshts/utility-result": ["libs/utility/result/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
